{
    "name": "mcp-code-intelligence",
    "displayName": "MCP Code Intelligence",
    "description": "VS Code extension for MCP Code Intelligence Server",
    "version": "0.4.0",
    "publisher": "mahkande",
    "engines": {
        "vscode": "^1.74.0"
    },
    "activationEvents": [
        "onStartupFinished",
        "workspaceContains:.cursorrules",
        "workspaceContains:.mcp-rules.md"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mcp-code-intelligence.restart",
                "title": "MCP: Restart Server"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    },
    "dependencies": {}
}