      "command": "python",
      "args": [
        "-m",
        "mcp_code_intelligence.mcp",
        "mcp"
      ],
      "env": {
        "MCP_PROJECT_ROOT": "c:/Users/mahir/Desktop/mcp-server/mcp-vector-search",
        "MCP_ENABLE_FILE_WATCHING": "true",
